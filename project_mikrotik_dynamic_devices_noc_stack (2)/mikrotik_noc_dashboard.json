{
  "id": null,
  "title": "MikroTik NOC Dashboard",
  "tags": ["mikrotik", "noc"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "type": "table",
      "title": "Interfaces Status",
      "targets": [
        {
          "expr": "noc_interface_up",
          "format": "table"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {}
        }
      },
      "options": {
        "showHeader": true,
        "sortBy": []
      },
      "transformations": [
        {
          "id": "labelsToFields",
          "options": {}
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 }
    },
    {
      "type": "timeseries",
      "title": "Interface RX Traffic (bps)",
      "targets": [
        { "expr": "noc_interface_rx_bps", "legendFormat": "{{device}}/{{iface}}" }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 }
    },
    {
      "type": "timeseries",
      "title": "Interface TX Traffic (bps)",
      "targets": [
        { "expr": "noc_interface_tx_bps", "legendFormat": "{{device}}/{{iface}}" }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 }
    },
    {
      "type": "timeseries",
      "title": "Interface Error Rate (errors/sec)",
      "targets": [
        { "expr": "noc_interface_err_per_sec", "legendFormat": "{{device}}/{{iface}}" }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 }
    },
    {
      "type": "stat",
      "title": "OSPF Neighbors (Total by Device)",
      "targets": [
        { "expr": "count(noc_interface_up) by (device)" }
      ],
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 16 }
    },
    {
      "type": "stat",
      "title": "BGP Peers (Established)",
      "targets": [
        { "expr": "sum(noc_interface_up{state=\"UP\"}) by (device)" }
      ],
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 16 }
    },
    {
      "type": "stat",
      "title": "BGP Peers (Down)",
      "targets": [
        { "expr": "sum(noc_interface_up{state!=\"UP\"}) by (device)" }
      ],
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 16 }
    }
  ]
}
